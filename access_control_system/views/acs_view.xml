<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="acs_locker_list">
      <field name="name">櫃位資料列表</field>
      <field name="model">acs.locker</field>
      <field name="arch" type="xml">
        <tree>
          <field name="locker_id"/>
          <field name="locker_type"/>
          <field name="locker_style"/>
          <field name="locker_spec"/>
          <field name="locker_floor"/>
          <field name="locker_vesion"/>

          
          <field name="devicegroup"/>
          <field name="card"/>
          <field name="contract_id"/>

        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="acs_locker_form">
        <field name="name">櫃位資料設定</field>
        <field name="model">acs.locker</field>
        <field name="arch" type="xml">
            <form string="櫃位設定">
            <header>
                      <!-- Buttons go here-->
                  </header>
                <sheet>
                <group>
                  <field name="locker_id"/>
                  <field name="locker_type"/>
                  <field name="locker_style"/>
                  <field name="locker_spec"/>
                  
                  <field name="locker_floor"/>
                  <field name="locker_vesion"/>
                  <field name="devicegroup" widget="many2one" options="{'no_create_edit': True, 'no_create': True}" />
                  <field name="card" widget="many2one" options="{'no_create_edit': True, 'no_create': True}"/>
                  <field name="contract_id"/>
                </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="acs_device_list">
      <field name="name">門市卡機列表</field>
      <field name="model">acs.device</field>
      <field name="arch" type="xml">
        <tree>
          <field name="device_owner"/>
          <field name="devicegroup"/>
          <field name="device_id"/>
          <field name="name"/>
          <field name="device_ip"/>
          <field name="device_type"/>
          <field name="device_port"/>
          <field name="node_id"/>
          <field name="device_location"/>
          <field name="device_pin"/>
          <field name="device_pin_update"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="acs_device_form">
        <field name="name">門市卡機設定</field>
        <field name="model">acs.device</field>
        <field name="arch" type="xml">
            <form string="卡機設定">
            <header>
                      <!-- Buttons go here-->
                      <button name="action_test" string="測試連線" type="object" default_focus="1" class="oe_highlight"/>
                      <button name="action_reset_pincode" string="更新通關密碼" type="object" default_focus="1" class="oe_highlight"/>
                  </header>
                <sheet>
                <group>
                    <field name="device_id"/>
                    <field name="name"/>
                    <field name="device_ip"/>
                    <field name="device_type" />
                    <field name="device_port"/>
                    <field name="node_id"/>
                    <field name="device_owner" options="{'no_create_edit': True, 'no_create': True}" />
                    <field name="device_location"/>
                    <field name="devicegroup" options="{'no_create_edit': True, 'no_create': True}" />
                </group>
                </sheet>
            </form>
        </field>
    </record>

<record model="ir.ui.view" id="acs_devicegroup_list">
      <field name="name">門禁群組</field>
      <field name="model">acs.devicegroup</field>
      <field name="arch" type="xml">
        <tree>
          <field name="devicegroup_id"/>
          <field name="devicegroup_name"/>
        </tree>
      </field>
 </record>
    
 <record model="ir.ui.view" id="acs_devicegroup_form">
        <field name="name">門禁群組設定</field>
        <field name="model">acs.devicegroup</field>
        <field name="arch" type="xml">
            <form string="門禁群組設定">
                  <header>
                      <!-- Buttons go here-->
                      <button name="action_clear" string="清除設定" type="object" default_focus="1" class="oe_highlight"/>
                      <button name="action_push" string="傳送設定" type="object" default_focus="1" class="oe_highlight"/> 
                      <button name="action_update" string="更新設定" type="object" default_focus="1" class="oe_highlight"/>
                      <button name="action_reset_group_pincode" string="更新通關密碼" type="object" default_focus="1" class="oe_highlight"/>
                  </header>
                <sheet>
                  <group>
                    <field name="devicegroup_id"/>
                    <field name="devicegroup_name"/>
                  </group>
                  <notebook>
                      <page string="卡機列表">
                          <field name="device_ids" options="{'no_create_edit': True, 'no_create': True}"/>
                      </page>
                      <page string="櫃位列表">
                          <field name="locker_ids" options="{'no_create_edit': True, 'no_create': True}"/>
                      </page>
                      <page string="授權卡片列表">
                          <field name="card_ids" options="{'no_create_edit': True, 'no_create': True}"/>
                      </page>
                  </notebook>
                </sheet>
            </form>
        </field>
</record>

<record model="ir.ui.view" id="acs_card_list">
      <field name="name">卡片設定</field>
      <field name="model">acs.card</field>
      <field name="arch" type="xml">
        <tree>
          <field name="user_role"/>
          <field name="user_id"/>
          <field name="user_name"/>
          <field name="user_phone"/>
          <field name="card_id"/>
        </tree>
      </field>
    </record>

  <record model="ir.ui.view" id="acs_card_form">
    <field name="name">卡片設定</field>
    <field name="model">acs.card</field>
    <field name="arch" type="xml">
      <form string="卡片設定" duplicate="0">
        <header>
          <!-- Buttons go here-->
        </header>
        <sheet>
          <group>
            <field name="card_owner" widget="res_partner_many2one" context="{'res_partner_search_mode': 'customer', 'show_vat': True , 'search_by_vat': True}" options="{'no_create': True, 'no_create_edit': True}"/>
            <field name="user_id" />
            <field name="user_name" />
            <field name="user_phone"/>
            <field name="card_id"/>
            <field name="card_pin"/>
          </group>
          <notebook>
          <!-- 新增合約請至[櫃位資料設定]，再設定櫃位[所屬卡片] -->
            <page string="合約列表(客戶)">
              <field name="locker_ids">
              </field>
            </page>
            <page string="授權群組列表(員工/廠商)">
              <field name="devicegroup_ids">
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

<record model="ir.ui.view" id="acs_cardlog_list">
      <field name="name">進出紀錄</field>
      <field name="model">acs.cardlog</field>
      <field name="arch" type="xml">
        <tree create="false" edit="false" delete="false" duplicate="false">
          <field name="device_owner"/>
          <field name="device_name"/>
          <field name="user_role"/>
          <field name="card_id"/>
          <field name="cardlog_type"/>
          <field name="user_id"/>
          <field name="user_name"/>
          <field name="cardlog_time"/>
          <field name="cardlog_result"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="acs_cardsettinglog_list">
      <field name="name">卡片異動紀錄</field>
      <field name="model">acs.cardsettinglog</field>
      <field name="arch" type="xml">
        <tree create="false" edit="false" delete="false" duplicate="false">
          <field name="cardsetting_type"/>
          <field name="user_role"/>
          <field name="user_id"/>
          <field name="user_name"/>
          <field name="card_id"/>
          <field name="cardsettinglog_time"/>
          <field name="cardsettinglog_user"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="acs_accesscodelog_list">
      <field name="name">個人通關密碼設定紀錄</field>
      <field name="model">acs.accesscodelog</field>
      <field name="arch" type="xml">
        <tree create="false" edit="false" delete="false" duplicate="false">
          <field name="user_role"/>
          <field name="user_id"/>
          <field name="user_name"/>
          <field name="devicegroup_name"/>
          <field name="create_time"/>
          <field name="expire_time"/>
          <field name="accesscode"/>
        </tree>
      </field>
    </record>
</odoo>
