<?xml version="1.0"?>
<odoo>

    <record model="ir.ui.view" id="acs_device_list">
      <field name="name">門市卡機列表</field>
      <field name="model">acs.device</field>
      <field name="arch" type="xml">
        <tree>
          <field name="device_owner"/>
          <field name="device_id"/>
          <field name="name"/>
          <field name="device_ip"/>
          <field name="device_type"/>
          <field name="device_location"/>
          <field name="active"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="acs_device_form">
        <field name="name">門禁設定</field>
        <field name="model">acs.device</field>
        <field name="arch" type="xml">
            <form string="卡機設定">
                <group>
                    <field name="device_id"/>
                    <field name="name"/>
                    <field name="device_ip"/>
                    <field name="device_type"/>
                    <field name="device_owner"/>
                    <field name="device_location"/>
                    <field name="active" readonly="1"/>
                </group>
            </form>
        </field>
    </record>

<record model="ir.ui.view" id="acs_devicegroup_list">
      <field name="name">門禁群組</field>
      <field name="model">acs.devicegroup</field>
      <field name="arch" type="xml">
        <tree>
          <field name="devicegroup_id"/>
          <field name="devicegroup_name"/>
        </tree>
      </field>
 </record>
    
 <record model="ir.ui.view" id="acs_devicegroup_form">
        <field name="name">門禁群組設定</field>
        <field name="model">acs.devicegroup</field>
        <field name="arch" type="xml">
            <form string="門禁群組設定">
                <group>
                  <field name="devicegroup_id"/>
                  <field name="devicegroup_name"/>
                </group>
            </form>
        </field>
</record>

<record model="ir.ui.view" id="acs_card_list">
      <field name="name">卡片設定</field>
      <field name="model">acs.card</field>
      <field name="arch" type="xml">
        <tree>
          <field name="user_role"/>
          <field name="user_id"/>
          <field name="user_name"/>
          <field name="user_phone"/>
          <field name="card_id"/>
        </tree>
      </field>
    </record>

        <record model="ir.ui.view" id="acs_card_form">
        <field name="name">卡片設定</field>
        <field name="model">acs.card</field>
        <field name="arch" type="xml">
            <form string="卡片設定">
                <group>
                    <field name="user_role"/>
                    <field name="user_id"/>
                    <field name="user_name"/>
                    <field name="user_phone"/>
                     <field name="card_id"/>
                </group>
            </form>
        </field>
    </record>


<record model="ir.ui.view" id="acs_deviceaccesscode_list">
      <field name="name">通關密碼</field>
      <field name="model">acs.deviceaccesscode</field>
      <field name="arch" type="xml">
        <tree>
          <field name="devicegroup_name"/>
          <field name="accesscode"/>
          <field name="start_time"/>
          <field name="end_time"/>
        </tree>
      </field>
    </record>

        <record model="ir.ui.view" id="acs_deviceaccesscode_form">
        <field name="name">每日更新通關密碼</field>
        <field name="model">acs.deviceaccesscode</field>
        <field name="arch" type="xml">
            <form string="每日更新通關密碼">
                <group>
                    <field name="devicegroup_name"/>
                    <field name="accesscode"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                </group>
            </form>
        </field>
    </record>

</odoo>