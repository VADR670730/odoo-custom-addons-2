<?xml version="1.0"?>
<odoo>
    <!--all the view for mod classes-->
    <record id="res_hr_view_department_form_inherited" model="ir.ui.view"> 
        <field name="name">hr.custom.form.inherited</field>
        <field name="model">hr.department</field> 
        <field name="inherit_id" ref="hr.view_department_form"/> 
        <field name="arch" type="xml"> 
            <xpath expr="//field[@name='name']" position="after"> 
                <field name="code" string="部門代碼"/>
            </xpath> 
        </field> 
    </record>
    <record id="res_base_view_partner_form_inherited" model="ir.ui.view"> 
        <field name="name">res.custom.form.inherited</field>
        <field name="model">res.partner</field> 
        <field name="inherit_id" ref="base.view_partner_form"/> 
        <field name="arch" type="xml"> 
            <xpath expr="//page[@name='internal_notes']" position="after"> 
                <page string="合約列表" >
                <!-- attrs="{'invisible':[ ('supplier_rank', '>', '0') ] }" -->
                    <field name="contract_ids"
                    options="{'no_create_edit': True, 'no_create': True ,'no_open': True,}"
                    attrs="{'readonly': True }" >
                        <field name="arch" type="xml">
                            <tree>
                                <field name="status"/>
                                <field name="locker_id"/>
                                <field name="code"/>
                            </tree>
                        </field>
                    </field>
                </page>
                <page string="卡片列表">
                    <field name="card_ids"
                    options="{'no_create_edit': True, 'no_create': True ,'no_open': True,}"
                    attrs="{'readonly': True }" >
                        <field name="arch" type="xml">
                            <tree>
                                <field name="status"/>
                                <field name="uid"/>
                                <field name="pin"/>
                            </tree>
                        </field>
                    </field>
                </page>
            </xpath> 
        </field> 
    </record>
    <record model="ir.ui.view" id="acs_locker_list">
      <field name="name">櫃位列表</field>
      <field name="model">acs.locker</field>
      <field name="arch" type="xml">
        <tree>
          <field name="status"/>
          <field name="code"/>
          <field name="category"/>
          <field name="style"/>
          <field name="spec"/>
          <field name="floor"/>
          <field name="vesion"/>
          <field name="devicegroup_id"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="acs_locker_form">
        <field name="name">櫃位設定</field>
        <field name="model">acs.locker</field>
        <field name="arch" type="xml">
            <form string="櫃位設定">
                <header>
                      <!-- Buttons go here-->
                </header>
                <sheet>
                    <group>
                    <field name="status"/>
                    <field name="code"/>
                    <field name="category"/>
                    <field name="style"/>
                    <field name="spec"/>                  
                    <field name="floor"/>
                    <field name="vesion"/>
                    <field name="devicegroup_id" widget="many2one" options="{'no_create_edit': True, 'no_create': True ,'no_open': True,}" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="acs_contract_list">
      <field name="name">合約列表</field>
      <field name="model">acs.contract</field>
      <field name="arch" type="xml">
        <tree>
            
            <field name="status"/>
            <field name="locker_id" widget="many2one" 
            options="{'no_create_edit': True, 'no_create': True,'no_open': True,}" />
            <field name="code"/>
            <field name="partner_id"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="acs_contract_form">
        <field name="name">合約設定</field>
        <field name="model">acs.contract</field>
        <field name="arch" type="xml">
            <form string="合約設定">
                <header>
                      <!-- Buttons go here-->
                </header>
                <sheet>
                    <group>
                    <field name="status"/>
                    <field name="locker_id" widget="many2one" 
                    options="{'no_create_edit': True, 'no_create': True ,'no_open': True,}" />
                    <field name="code"/>
                    <field name="partner_id" widget="many2one" 
                    options="{'no_create_edit': True, 'no_create': True,'no_open': True,}" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
