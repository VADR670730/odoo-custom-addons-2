<?xml version="1.0"?>
<odoo>
    <!--all the view for classes not necessary for this system-->
    <!--this effore result in 3 weeks delay-->
    <record model="ir.ui.view" id="acs_contract_list">
      <field name="name">合約列表</field>
      <field name="model">acs.contract</field>
      <field name="arch" type="xml">
        <tree>
            <field name="status"/>
            <field name="locker_id" widget="many2one" 
            options="{'no_create_edit': True, 'no_create': True,'no_open': True,}" />
            <field name="code"/>
            <field name="partner_id"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="acs_contract_form">
        <field name="name">合約設定</field>
        <field name="model">acs.contract</field>
        <field name="arch" type="xml">
            <form string="合約設定">
                <header>
                      <!-- Buttons go here-->
                </header>
                <sheet>
                    <group>
                    <field name="status"/>
                    <field name="locker_id" widget="many2one" 
                    options="{'no_create_edit': True, 'no_create': True ,'no_open': True,}" />
                    <field name="code"/>
                    <field name="partner_id" widget="many2one" 
                    options="{'no_create_edit': True, 'no_create': True,'no_open': True,}" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
